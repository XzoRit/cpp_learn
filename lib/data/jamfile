import testing
    ;

import boost
    ;

boost.use-project
    ;

constant inc_dir
    : .
    ;

constant src_dir
    : $(inc_dir)/data
    ;

constant test_sources
    : [ glob $(src_dir)/*.test.cpp ]
    ;

constant sources
    : [ glob $(src_dir)/*.cpp : $(test_sources) ]
    ;

lib data_lib
    : $(sources)
    : <include>$(inc_dir)
      <library>/boost//serialization
    :
    : <include>$(inc_dir)
      <library>/boost//serialization
    ;

run $(test_sources)
    : --color_output=false
    :
    : <library>data_lib
      <library>/boost//unit_test_framework
      <library>/boost//serialization
    : test
    ;
