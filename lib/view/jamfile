import testing
    ;

import boost
    ;

boost.use-project
    ;

constant inc_dir
    : .
    ;

constant src_dir
    : $(inc_dir)/view
    ;

constant test_sources
    : [ glob $(src_dir)/*.test.cpp ]
    ;

constant sources
    : [ glob $(src_dir)/*.cpp : $(test_sources) ]
    ;

lib view_lib
    : $(sources)
    : <include>$(inc_dir)
      <library>/data//data_lib
      <library>/boost//serialization
    :
    : <include>$(inc_dir)
      <library>/data//data_lib
      <library>/boost//serialization
    ;

run $(test_sources)
    : --color_output=false
    :
    : <library>view_lib
      <library>/data//data_lib
      <library>/boost//serialization
      <library>/boost//unit_test_framework
    : test
    ;
